---
layout: layout.njk
pagination:
  data: goods
  size: 1
permalink: 'goods/{{ pagination.items[0].url | slugify }}/'
---
    <div class="main__inner">
      <div class="main__content">
        {# <!-- 商品画像 -->
        <div class="main__visaul">
          <img src="/images/{{ pagination.items[0].itemphotos[0] }}" alt="" class="main__visaul__img">
        </div> #}
        {# サブ画像 #}
          <div class="boxwrap">
            <div class="main__visaul"><img src="https://bell-cocoro.org/cocoro-shop/images/{{ pagination.items[0].itemphotos[0] }}" alt=""  class="main__visaul__img"></div>
            <div class="simg">
                <ul>
                    <li><img src="https://bell-cocoro.org/cocoro-shop/images/{{ pagination.items[0].itemphotos[0] }}" alt="" ></li>
                    <li><img src="https://bell-cocoro.org/cocoro-shop/images/{{ pagination.items[0].itemphotos[1] }}" alt="" ></li>
                    <li><img src="https://bell-cocoro.org/cocoro-shop/images/{{ pagination.items[0].itemphotos[2] }}" alt="" ></li>
                </ul>
            </div>
          </div>
          
        <!-- 商品紹介テキスト -->
        <div class="main__text">
          <h2 class="main__text__title">{{ pagination.items[0].name }}</h2>
          <!-- 値段・購入ボタン -->
          <div class="main__text__buy buy">
            <p class="buy__price">¥ {{pagination.items[0].price}} <span class="buy__price__span">税込</span></p>
            <!-- 購入ボタン -->
            <a href="#" class="buy__btn"><p class="buy__btn__p">カート追加</p></a>
          </div>
          <!-- 商品紹介 -->
          <p class="main__text__discript">{{pagination.items[0].text}}</p>
          <!-- タグ -->
          <ul class="main__text__g-tag g-tag">
            <li class="g-tag__item">オモチャ</li>
            <li class="g-tag__item">ミニカー</li>
            <li class="g-tag__item">車</li>
            <li class="g-tag__item">タカラトミー</li>
          </ul>
          <!-- 商品使用 -->
          <div class="main__specification">
            
            <table border="1" class="main__table" >
              <tr>
                <th>メーカー</th>
                <td>{{pagination.items[0].maker}}</td>
              </tr>
              {# <tr>
                <th>メーカー</th>
                <td>{{pagination.items[0].maker}}</td>
              </tr>
              <tr> #}
                <th>色</th>
                <td>{{pagination.items[0].colors}}</td>
              </tr>
            </table>
          </div>
        </div>

      </div>
    </div>

<!--  画像をループで取得 -->
{% for photo in goods.itemphotos %}
<img src="/images/{{ photo }}" />
{% endfor %}