---
pagination:
  data: goods
  size: 1
  alias: goods
permalink: 'goods/{{ pagination.goods[0].url | slugify }}/'
---

<ul>
	<li>{{ goods.name }}</li>
	<li>{{ goods.price }}</li>
</ul>

<img src="/images/{{ goods.itemphotos[0] }}" />
<img src="/images/{{ goods.itemphotos[1] }}" />
<img src="/images/{{ goods.itemphotos[2] }}" />

