---
layout: layout.njk
---

	<div class="main__inner">
		{# 検索バー #}
		<div class="main__search">

		</div>
		{# 表示切り替え #}
		<div class="main__type">
			<ul class="main__type__list">
				<li class="main__type__list__item">商品１</li>
				<li class="main__type__list__item">商品２</li>
				<li class="main__type__list__item">商品３</li>
			</ul>
		</div>
		{# 商品表示 #}
		<section class="main__goods">
			{% for topPhoto in goods %}
			{# 商品 #}
			<div class="main__goods__item gitem {{ topPhoto.url }}">
				<a href="./goods/{{ topPhoto.url }}" class="gitem__link">
					<img src="images/{{ topPhoto.itemphotos[0] }}" alt="{{ topPhotos.name }}メイン画像" class="gitem__img"/>
					<h2 class="gitem__title">{{ topPhoto.name }}</h2>
					<p class="gitem__price">￥{{ topPhoto.price }}<span class="gitem__price__span">税込み</span></p>
				</a>
				<div class="gitem__box">
					<a href="#" class="gitem__box__btn"><P class="">カートに追加</p></a>
					<a href="#" class="gitem__box__btn"><ion-icon name="heart-outline"></ion-icon></a>
				</div>
			</div>
			{% endfor %}
		</section>
	</div>